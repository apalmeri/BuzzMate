<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#BDBDBD"
    >
 

    <!-- TODO: Add data entry layout -->

    <EditText
        android:id="@+id/locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:ems="10" />

    <Button
        android:id="@+id/getButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="52dp"
        android:text="@string/get_button" />

    <Button
        android:id="@+id/friends_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="110dp"
        android:layout_y="52dp"
        android:text="@string/find_friends" />

    <ImageButton
        android:id="@+id/cab_button"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_x="40dp"
        android:layout_y="233dp"
        android:background="@android:color/transparent"
        android:src="@drawable/taxiicon" />

    <ImageButton
        android:id="@+id/foodButton"
        android:layout_width="94dp"
        android:layout_height="93dp"
        android:layout_x="164dp"
        android:layout_y="234dp"
         android:background="@android:color/transparent"
        android:src="@drawable/foodicon" />

    <ImageButton
        android:id="@+id/checkin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-4dp"
        android:layout_y="426dp"
        android:background="@android:color/transparent"
        android:src="@drawable/droppedpin" />

    <Button
        android:id="@+id/drunkTest"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_x="64dp"
        android:layout_y="354dp"
        android:text="@string/drunkTest" />

    <ImageButton
        android:id="@+id/barButton"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_x="46dp"
        android:layout_y="125dp"
        android:background="@android:color/transparent"
        android:src="@drawable/bars" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="264dp"
        android:layout_y="428dp"
        android:background="@android:color/transparent"
        android:src="@drawable/settings" />

    <ImageButton
        android:id="@+id/soberButton"
        android:layout_width="97dp"
        android:layout_height="105dp"
        android:layout_x="162dp"
        android:layout_y="119dp"
        android:background="@android:color/transparent"
        android:src="@drawable/soberbuddies" />

</AbsoluteLayout>
